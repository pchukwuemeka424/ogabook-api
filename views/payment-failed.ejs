<%- include('partials/header', { title: 'Payment Failed - OgaBook' }) %>

<style>
    .failed-container {
        min-height: 100vh;
        background: #f9fafb;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }
    .failed-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 600px;
        width: 100%;
        overflow: hidden;
        text-align: center;
    }
    .failed-header {
        background: #ef4444;
        color: white;
        padding: 50px 30px;
    }
    .failed-icon-wrapper {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }
    .failed-icon-wrapper i {
        font-size: 3.5rem;
    }
    .app-name {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
        letter-spacing: 1px;
    }
    .failed-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin: 0;
    }
    .failed-body {
        padding: 40px 30px;
    }
    .failed-message {
        font-size: 1.1rem;
        color: #374151;
        margin-bottom: 30px;
        line-height: 1.8;
    }
    .info-box {
        background: #fef3c7;
        border-left: 4px solid #f59e0b;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        text-align: left;
    }
    .info-box p {
        margin: 0;
        color: #92400e;
        line-height: 1.6;
    }
    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }
    .btn-primary-custom {
        background: #ef4444;
        border: none;
        border-radius: 12px;
        padding: 14px 28px;
        font-size: 1rem;
        font-weight: 600;
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
    }
    .btn-primary-custom:hover {
        background: #dc2626;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
        color: white;
    }
    .btn-secondary-custom {
        background: #f3f4f6;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 14px 28px;
        font-size: 1rem;
        font-weight: 600;
        color: #374151;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
    }
    .btn-secondary-custom:hover {
        background: #e5e7eb;
        border-color: #d1d5db;
        color: #374151;
        transform: translateY(-2px);
    }
</style>

<div class="failed-container">
    <div class="failed-card">
        <div class="failed-header">
            <div class="failed-icon-wrapper">
                <i class="bi bi-x-circle"></i>
            </div>
            <div class="app-name">OgaBook</div>
            <h1 class="failed-title">Payment Failed</h1>
        </div>
        
        <div class="failed-body">
            <p class="failed-message">
                Unfortunately, your payment could not be processed. This could be due to insufficient funds, 
                incorrect card details, network issues, or declined by your bank.
            </p>
            
            <div class="info-box">
                <p>
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>What to do:</strong> Please check your payment details and try again. 
                    If the problem persists, contact your bank or use a different payment method.
                </p>
            </div>
            
            <% if (typeof txRef !== 'undefined' && txRef) { %>
            <div class="info-box" style="margin-top: 15px;">
                <p style="margin: 0;">
                    <strong>Transaction Reference:</strong> <code><%= txRef %></code>
                </p>
            </div>
            <% } %>
            
            <div class="action-buttons">
                <a href="<%= typeof userId !== 'undefined' && userId ? `/?userId=${userId}&status=pending&package=basic&billingCycle=monthly&amount=200` : '/' %>" class="btn-primary-custom">
                    <i class="bi bi-arrow-clockwise"></i>
                    Try Again
                </a>
                <a href="/dashboard" class="btn-secondary-custom">
                    <i class="bi bi-house"></i>
                    Go to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

